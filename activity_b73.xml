        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="142dp"
        android:layout_height="58dp"
        android:text="noun
        Kahulugan:"
