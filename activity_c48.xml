    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Ganyan ka naman kaya lagi kang napapagalitan."
